<h1>Create a RestaurantPizza </h1>

<% if flash[:errors] %>
<ul>
<% flash[:errors].each do |error| %>
    <li> <%= error %> </li>
<% end %>
 </ul>
<% end %>
<%= form_with model: @restaurant_pizza do |f| %>

    <%= f.label :pizza_id %>
    <%= f.collection_select :pizza_id, @pizzas, :id, :name%>
    <br>
    <%= f.label :restaurant_id %>
    <%= f.collection_select :restaurant_id, @restaurants, :id, :name%>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br>
    <%= f.submit %>
    <% end %>